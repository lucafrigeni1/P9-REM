<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary900</item>
        <item name="colorSecondary">@color/colorPrimary800</item>
        <item name="colorAccent">@color/colorPrimary50</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:statusBarColor">@color/colorPrimary40</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary50</item>
        <item name="colorPrimaryDark">@color/colorPrimary50</item>
        <item name="colorPrimaryVariant">@color/colorPrimary50</item>
        <item name="colorAccent">@color/colorPrimary50</item>
        <item name="android:colorBackground">@color/colorPrimary50</item>

        <item name="android:windowBackground">@drawable/ny_background</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="CustomChipsStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/colorPrimary900</item>
    </style>

    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorPrimary800</item>
        <item name="android:textColorHint">@color/colorPrimary100</item>
        <item name="startIconTint">@color/colorPrimary100</item>
        <item name="endIconTint">@color/colorPrimary100</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorPrimary800</item>
    </style>

    <style name="SliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="sliderStyle">@style/Widget.App.Slider</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/colorPrimary100</item>
        <item name="colorOnPrimary">@color/colorPrimary900</item>
        <item name="colorOnSurface">@color/colorPrimary100</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">@color/colorPrimary500</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/colorPrimary900</item>
    </style>

</resources>
